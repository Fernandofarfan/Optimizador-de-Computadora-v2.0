{
  "version": "4.0.0",
  "general": {
    "language": "es",
    "theme": "dark",
    "auto_update": true,
    "check_updates_on_startup": true,
    "telemetry": false,
    "analytics": false,
    "enable_gui": true,
    "enable_progress_bars": true,
    "show_operation_history": true
  },
  "logging": {
    "enabled": true,
    "level": "INFO",
    "max_file_size_mb": 10,
    "max_files": 5,
    "log_to_file": true,
    "log_to_console": true,
    "log_path": "%USERPROFILE%\\OptimizadorPC\\logs"
  },
  "notifications": {
    "enabled": true,
    "show_completion": true,
    "show_errors": true,
    "show_warnings": true,
    "sound_enabled": true
  },
  "performance": {
    "parallel_execution": true,
    "max_threads": 4,
    "low_priority_mode": false,
    "respect_battery_mode": true
  },
  "cleaning": {
    "auto_empty_recycle_bin": false,
    "skip_files_newer_than_days": 0,
    "delete_windows_old": true,
    "clean_temp_on_startup": false,
    "deep_clean_by_default": false
  },
  "backup": {
    "auto_create_restore_point": true,
    "backup_before_changes": true,
    "keep_restore_points": 3,
    "backup_path": "%USERPROFILE%\\OptimizadorPC\\backups"
  },
  "gaming_mode": {
    "enabled": true,
    "auto_detect_games": true,
    "boost_priority": true,
    "disable_notifications": true,
    "disable_updates": true,
    "monitored_processes": [
      "steam.exe",
      "EpicGamesLauncher.exe",
      "GalaxyClient.exe",
      "RiotClientServices.exe"
    ]
  },
  "network": {
    "monitor_traffic": true,
    "detect_unusual_connections": true,
    "alert_on_suspicious_activity": true,
    "blocked_ips": [],
    "whitelisted_apps": []
  },
  "ai_assistant": {
    "enabled": true,
    "auto_diagnose": true,
    "suggest_fixes": true,
    "apply_fixes_automatically": false,
    "learning_mode": true
  },
  "dashboard": {
    "web_enabled": false,
    "port": 8080,
    "require_authentication": true,
    "auto_refresh_seconds": 5,
    "show_in_browser": false
  },
  "advanced": {
    "debug_mode": false,
    "verbose_logging": false,
    "skip_admin_check": false,
    "experimental_features": false,
    "custom_scripts_path": ""
  },
  "ui": {
    "show_banner": true,
    "use_colors": true,
    "animation_enabled": true,
    "compact_mode": false
  },
  "scheduled_tasks": {
    "auto_optimization": {
      "enabled": false,
      "frequency": "weekly",
      "day": "sunday",
      "time": "03:00"
    },
    "auto_backup": {
      "enabled": false,
      "frequency": "daily",
      "time": "23:00"
    }
  },
  "gpu_optimization": {
    "enabled": true,
    "auto_detect": true,
    "nvidia_enabled": true,
    "amd_enabled": true,
    "intel_enabled": true,
    "disable_game_dvr": true,
    "disable_transparency": true,
    "enable_gpu_scheduling": true
  },
  "ssd_health": {
    "enabled": true,
    "monitor_smart": true,
    "check_interval_hours": 24,
    "alert_on_high_temp": true,
    "alert_on_wear": true,
    "temp_threshold_celsius": 70,
    "wear_threshold_percent": 80,
    "auto_trim": true
  },
  "telemetry_settings": {
    "enabled": false,
    "ask_on_startup": true,
    "local_storage_only": true,
    "max_events": 100,
    "auto_clear_days": 30
  },
  "localization": {
    "auto_detect_system_language": true,
    "fallback_language": "es",
    "supported_languages": ["es", "en", "pt", "fr"]
  },
  "operation_history": {
    "enabled": true,
    "store_logs": true,
    "max_entries": 1000,
    "log_path": "%USERPROFILE%\\OptimizadorPC\\history",
    "auto_backup_history": true
  }
}
